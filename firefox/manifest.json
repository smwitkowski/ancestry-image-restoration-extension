{
    "description": "Restores an image from Ancestry and makes it available for download",
    "manifest_version": 2,
    "name": "Ancestry Image Restoration",
    "version": "1.0",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "*://domain/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://ancestry.com/*"
            ],
            "js": [
                "content_scripts/process_image.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "content_scripts/process_image.js",
        "assets/add-image.png",
        "assets/loading.gif"
    ],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Ancestry Image Restoration",
        "default_popup": "popup/popup.html"
    }
}