{
    "description": "Restores an image from Ancestry and makes it available for download",
    "manifest_version": 2,
    "name": "Ancestry Image Restoration",
    "version": "1.0",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "*://domain/*",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Ancestry Image Restoration",
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        "assets/*"
    ]
}