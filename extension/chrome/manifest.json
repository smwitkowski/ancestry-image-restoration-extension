{
  "manifest_version": 2,
  "name": "Ancestry Enhancer",
  "version": "1.0",
  "description": "Enhances blurry photos on Ancestry.com",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "https://ancestry-restore-mvfdoowqfq-uc.a.run.app/",
    "https://replicate.delivery/*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.ancestry.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
    "background": {
    "scripts": ["background.js"],
    "persistent": false  
  }
}
