{
  "manifest_version": 2,
  "name": "Ancestry Enhancer",
  "version": "0.0.1",
  "description": "Enhances blurry photos on Ancestry.com using AI upscale model GFPGAN and Replicate.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://www.ancestry.com/*",
    "https://ancestry-restore-mvfdoowqfq-uc.a.run.app/*",
    "https://replicate.delivery/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.ancestry.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
    "background": {
    "scripts": ["background.js"],
    "persistent": false  
  }
}
